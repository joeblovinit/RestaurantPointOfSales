<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center_horizontal"

    android:orientation="vertical"
    tools:context=".order_food">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order"
            android:textColor="@color/teal_700"
            android:textSize="40sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Table Number"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/table_number_edit_text"
            android:layout_weight="1"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="none"
            android:enabled="false"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ListView
        android:id="@+id/orderList"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        tools:layout_editor_absoluteX="361dp"
        tools:layout_editor_absoluteY="268dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <Button
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:text="Starter"
            android:id="@+id/orderStarterBtn"
            android:backgroundTint="@color/teal_700"
            android:textColor="#fff"
            />

        <Button
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:text="Main"
            android:id="@+id/orderMainBtn"
            android:backgroundTint="#623412"
            android:textColor="#fff"
            />

        <Button
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:text="Dessert"
            android:id="@+id/orderDessertBtn"
            android:backgroundTint="@color/teal_700"
            android:textColor="#fff"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <Button
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:text="Sides"
            android:id="@+id/orderSideBtn"
            android:backgroundTint="@color/teal_700"
            android:textColor="#fff"
            />

        <Button
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:text="Drinks"
            android:id="@+id/orderDrinkBtn"
            android:backgroundTint="#623412"
            android:textColor="#fff"
            />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <Button
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:text="Cancel"
            android:id="@+id/cancelOrderBtn"
            android:backgroundTint="@color/black"
            android:textColor="#fff"
            />

        <Button
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:text="Send"
            android:id="@+id/sendOrderFoodBtn"
            android:backgroundTint="#6a0000"
            android:textColor="#fff"
            />



    </LinearLayout>

</LinearLayout>